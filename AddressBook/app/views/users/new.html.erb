<div class="container d-flex flex-column align-items-center">
    <h1 class="mt-3">Create New User</h1>
    <%= form_for @user, html: {class: "d-flex flex-wrap flex-column"} do |form| %>
        
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        
        <div class="my-2">
            <%= form.label :username %>
            <br/>
            <%= form.text_field :username %>
        </div>
        <div class="my-2">
            <%= form.label :password %>
            <br/>
            <%= form.password_field :password %>
        </div>
        <div class="d-flex justify-content-center my-2">
            <%= form.submit "Create Account", class: "btn btn-success" %>
        </div>

    <% end %>

    <div class="d-flex justify-content-center align-items-center mt-4" style="height: 50px;">
        <p>
            Already signed up? Login&nbsp;<a href="/login">here</a>
        </p>
    </div>
</div>